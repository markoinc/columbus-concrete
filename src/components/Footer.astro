---
const phone = '(614) 902-3793';
const phoneClean = '6149023793';
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white py-12">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid md:grid-cols-4 gap-8">
      <!-- Company info -->
      <div>
        <h3 class="text-xl font-bold mb-4">Columbus Concrete & Design Co</h3>
        <p class="text-gray-400 text-sm mb-4">
          Professional concrete contractors serving Columbus, Ohio and surrounding areas. Quality craftsmanship, competitive pricing, and exceptional service.
        </p>
        <a href={`tel:${phoneClean}`} class="text-secondary font-semibold text-lg hover:text-secondary-light transition">
          {phone}
        </a>
      </div>
      
      <!-- Services -->
      <div>
        <h4 class="font-semibold mb-4">Services</h4>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li><a href="/services/concrete-driveways/" class="hover:text-white transition">Concrete Driveways</a></li>
          <li><a href="/services/concrete-patios/" class="hover:text-white transition">Concrete Patios</a></li>
          <li><a href="/services/concrete-slabs/" class="hover:text-white transition">Concrete Slabs</a></li>
          <li><a href="/services/stamped-concrete/" class="hover:text-white transition">Stamped Concrete</a></li>
          <li><a href="/services/concrete-foundations/" class="hover:text-white transition">Foundations</a></li>
        </ul>
      </div>
      
      <!-- Service Areas -->
      <div>
        <h4 class="font-semibold mb-4">Service Areas</h4>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li><a href="/locations/dublin/" class="hover:text-white transition">Dublin</a></li>
          <li><a href="/locations/westerville/" class="hover:text-white transition">Westerville</a></li>
          <li><a href="/locations/grove-city/" class="hover:text-white transition">Grove City</a></li>
          <li><a href="/locations/hilliard/" class="hover:text-white transition">Hilliard</a></li>
          <li><a href="/locations/" class="hover:text-white transition">All Areas →</a></li>
        </ul>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="font-semibold mb-4">Contact Us</h4>
        <p class="text-gray-400 text-sm mb-2">Columbus, OH 43215</p>
        <p class="text-gray-400 text-sm mb-2">Mon-Fri: 7AM-6PM</p>
        <p class="text-gray-400 text-sm mb-4">Sat: 8AM-4PM</p>
        <a href="/contact/" class="bg-secondary hover:bg-secondary-dark text-white px-6 py-3 rounded-lg font-semibold transition inline-block">
          Get Free Estimate
        </a>
      </div>
    </div>
    
    <!-- Bottom bar -->
    <div class="border-t border-gray-800 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 text-sm">
          © {currentYear} Columbus Concrete & Design Co. All rights reserved.
        </p>
        <div class="flex gap-6 text-gray-500 text-sm">
          <a href="/privacy/" class="hover:text-white transition">Privacy Policy</a>
          <a href="/terms/" class="hover:text-white transition">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>
