---
interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  schema?: object | object[];
}

const { 
  title, 
  description = "Columbus Concrete & Design Co - Professional concrete contractors serving Columbus, OH and Franklin County. Driveways, patios, slabs, stamped concrete. Call (614) 902-3793 for free estimate.",
  canonicalUrl,
  schema
} = Astro.props;

const siteUrl = 'https://columbusconcretecontractor.co';
const fullTitle = title === 'Columbus Concrete & Design Co' ? title : `${title} | Columbus Concrete & Design Co`;
const phone = '(614) 902-3793';
const phoneClean = '6149023793';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyCTA from '../components/StickyCTA.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="robots" content="index, follow">
  <meta name="keywords" content="concrete contractors Columbus OH, concrete driveway Columbus, concrete patio Columbus, stamped concrete Columbus, Franklin County concrete, Ohio concrete contractor">
  <meta name="geo.region" content="US-OH">
  <meta name="geo.placename" content="Columbus">
  
  <title>{fullTitle}</title>
  
  {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  
  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>
  <meta property="og:site_name" content="Columbus Concrete & Design Co">
  <meta property="og:url" content={canonicalUrl || siteUrl}>
  <meta property="og:image" content={`${siteUrl}/images/og-image.jpg`}>
  <meta property="og:locale" content="en_US">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={fullTitle}>
  <meta name="twitter:description" content={description}>
  
  <!-- Schema.org - Page specific -->
  {schema && (
    Array.isArray(schema) 
      ? schema.map(s => <script type="application/ld+json" set:html={JSON.stringify(s)} />)
      : <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}
  
  <!-- Base LocalBusiness Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": ["LocalBusiness", "HomeAndConstructionBusiness"],
    "@id": "https://columbusconcretecontractor.co/#business",
    "name": "Columbus Concrete & Design Co",
    "image": "https://columbusconcretecontractor.co/images/logo.png",
    "telephone": "(614) 902-3793",
    "email": "info@columbusconcretecontractor.co",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Columbus",
      "addressLocality": "Columbus",
      "addressRegion": "OH",
      "postalCode": "43215",
      "addressCountry": "US"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 39.9612,
      "longitude": -82.9988
    },
    "url": "https://columbusconcretecontractor.co/",
    "priceRange": "$$",
    "currenciesAccepted": "USD",
    "paymentAccepted": "Cash, Credit Card, Check",
    "openingHours": ["Mo-Fr 07:00-18:00", "Sa 08:00-16:00"],
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "4.9",
      "reviewCount": "127",
      "bestRating": "5",
      "worstRating": "1"
    },
    "areaServed": [
      {"@type": "City", "name": "Columbus", "containedIn": "Ohio"},
      {"@type": "City", "name": "Dublin"},
      {"@type": "City", "name": "Westerville"},
      {"@type": "City", "name": "Grove City"},
      {"@type": "City", "name": "Hilliard"},
      {"@type": "City", "name": "Reynoldsburg"},
      {"@type": "City", "name": "Gahanna"},
      {"@type": "City", "name": "Upper Arlington"},
      {"@type": "City", "name": "Worthington"},
      {"@type": "City", "name": "Powell"},
      {"@type": "City", "name": "Pickerington"},
      {"@type": "City", "name": "New Albany"},
      {"@type": "AdministrativeArea", "name": "Franklin County"},
      {"@type": "AdministrativeArea", "name": "Delaware County"},
      {"@type": "AdministrativeArea", "name": "Fairfield County"},
      {"@type": "AdministrativeArea", "name": "Licking County"}
    ],
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Concrete Services",
      "itemListElement": [
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Concrete Driveways", "description": "Professional driveway installation and replacement"}},
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Concrete Patios", "description": "Custom patio design and installation"}},
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Concrete Slabs", "description": "Garage, shed, and commercial slab installation"}},
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Stamped Concrete", "description": "Decorative stamped patterns and colors"}},
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Concrete Foundations", "description": "Residential and commercial foundation work"}},
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Concrete Repair", "description": "Crack repair, leveling, and restoration"}}
      ]
    },
    "description": "Columbus Concrete & Design Co is a premier concrete contractor serving Columbus, OH and the greater Franklin County area. We specialize in driveways, patios, slabs, foundations, stamped concrete, and decorative finishes. Licensed, insured, and committed to quality craftsmanship."
  }
  </script>
  
  <!-- Organization Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Columbus Concrete & Design Co",
    "url": "https://columbusconcretecontractor.co/",
    "logo": "https://columbusconcretecontractor.co/images/logo.png",
    "sameAs": [],
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+1-614-902-3793",
      "contactType": "customer service",
      "areaServed": ["Columbus", "Franklin County", "Central Ohio"],
      "availableLanguage": ["English", "Spanish"]
    }
  }
  </script>
</head>
<body class="min-h-screen bg-warm-50 text-gray-900 flex flex-col font-sans">
  <Header />

  <main class="flex-grow">
    <slot />
  </main>

  <Footer />
  
  <!-- Sticky CTA for mobile -->
  <StickyCTA />

  <!-- Mobile menu script -->
  <script>
    document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
      document.getElementById('mobile-menu')?.classList.toggle('hidden');
    });
  </script>
</body>
</html>

