---
interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  schema?: object | object[];
}

const { 
  title, 
  description = "Columbus Concrete & Design Co - Professional concrete contractors serving Columbus, OH. Driveways, patios, slabs, stamped concrete. Call (614) 902-3793 for free estimate.",
  canonicalUrl,
  schema
} = Astro.props;

const siteUrl = 'https://columbusconcretecontractor.co';
const fullTitle = title === 'Columbus Concrete & Design Co' ? title : `${title} | Columbus Concrete & Design Co`;
const phone = '(614) 902-3793';
const phoneClean = '6149023793';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="robots" content="index, follow">
  <meta name="keywords" content="concrete contractors Columbus OH, concrete driveway Columbus, concrete patio Columbus, stamped concrete Columbus, Franklin County concrete">
  
  <title>{fullTitle}</title>
  
  {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  
  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>
  <meta property="og:site_name" content="Columbus Concrete & Design Co">
  <meta property="og:url" content={canonicalUrl || siteUrl}>
  <meta property="og:image" content={`${siteUrl}/images/og-image.jpg`}>
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={fullTitle}>
  <meta name="twitter:description" content={description}>
  
  <!-- Schema.org - Page specific -->
  {schema && (
    Array.isArray(schema) 
      ? schema.map(s => <script type="application/ld+json" set:html={JSON.stringify(s)} />)
      : <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}
  
  <!-- Base LocalBusiness Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": "https://columbusconcretecontractor.co/#business",
    "name": "Columbus Concrete & Design Co",
    "image": "https://columbusconcretecontractor.co/images/logo.png",
    "telephone": "(614) 902-3793",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Columbus",
      "addressRegion": "OH",
      "postalCode": "43215",
      "addressCountry": "US"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 39.9612,
      "longitude": -82.9988
    },
    "url": "https://columbusconcretecontractor.co/",
    "priceRange": "$$",
    "openingHours": ["Mo-Fr 07:00-18:00", "Sa 08:00-16:00"],
    "areaServed": [
      {"@type": "City", "name": "Columbus"},
      {"@type": "City", "name": "Dublin"},
      {"@type": "City", "name": "Westerville"},
      {"@type": "City", "name": "Grove City"},
      {"@type": "City", "name": "Hilliard"},
      {"@type": "City", "name": "Reynoldsburg"},
      {"@type": "City", "name": "Gahanna"},
      {"@type": "City", "name": "Upper Arlington"},
      {"@type": "AdministrativeArea", "name": "Franklin County"}
    ],
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Concrete Services",
      "itemListElement": [
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Concrete Driveways"}},
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Concrete Patios"}},
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Concrete Slabs"}},
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Stamped Concrete"}},
        {"@type": "Offer", "itemOffered": {"@type": "Service", "name": "Concrete Foundations"}}
      ]
    },
    "description": "Columbus Concrete & Design Co is a premier concrete contractor serving Columbus, OH and Franklin County. We specialize in driveways, patios, slabs, foundations, and decorative stamped concrete."
  }
  </script>
  
  <!-- Organization Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Columbus Concrete & Design Co",
    "url": "https://columbusconcretecontractor.co/",
    "logo": "https://columbusconcretecontractor.co/images/logo.png",
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+1-614-902-3793",
      "contactType": "customer service",
      "areaServed": "US",
      "availableLanguage": "English"
    }
  }
  </script>
</head>
<body class="min-h-screen bg-gray-50 text-gray-900 flex flex-col">
  <Header />

  <main class="flex-grow">
    <slot />
  </main>

  <Footer />

  <!-- Mobile menu script -->
  <script>
    document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
      document.getElementById('mobile-menu')?.classList.toggle('hidden');
    });
  </script>
</body>
</html>
