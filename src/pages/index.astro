const phone = '(614) 902-3793';
const phoneClean = '6149023793';

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much does a concrete driveway cost in Columbus, OH?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Concrete driveway costs in Columbus typically range from $8-15 per square foot, depending on size, thickness, and finish options. A standard 600 sq ft driveway costs $4,800-$9,000. Stamped or decorative concrete adds $2-5 per square foot. Contact us for a free, detailed estimate for your specific project."
      }
    },
    {
      "@type": "Question",
      "name": "How long does concrete take to cure in Ohio weather?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Concrete reaches initial set in 24-48 hours, but full curing takes 28 days. In Ohio's variable weather, we recommend staying off new concrete for at least 7 days and avoiding heavy vehicles for 2 weeks. We schedule projects during optimal weather conditions when possible."
      }
    },
    {
      "@type": "Question",
      "name": "Do you offer free estimates for concrete work?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! We provide free, no-obligation estimates for all concrete projects in Columbus and surrounding areas. We'll visit your property, discuss your needs, and provide a detailed written quote within 24-48 hours."
      }
    },
    {
      "@type": "Question",
      "name": "What areas in Ohio do you serve?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We serve Columbus, OH and the greater Central Ohio area including Dublin, Westerville, Grove City, Hilliard, Reynoldsburg, Gahanna, Upper Arlington, Worthington, Powell, Pickerington, and all of Franklin County plus parts of Delaware, Fairfield, and Licking counties."
      }
    },
    {
      "@type": "Question",
      "name": "Are you licensed and insured?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, Columbus Concrete & Design Co is fully licensed and insured for all concrete work in Ohio. We carry comprehensive liability insurance and workers compensation coverage for your protection."
      }
    }
  ]
};
