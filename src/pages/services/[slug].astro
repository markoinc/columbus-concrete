---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactForm from '../../components/ContactForm.astro';
import services from '../../data/services.json';

export function getStaticPaths() {
  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service }
  }));
}

const { service } = Astro.props;
const phone = '(614) 902-3793';
const phoneClean = '6149023793';

const otherServices = services.filter(s => s.slug !== service.slug).slice(0, 3);

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": service.name,
  "description": service.description,
  "provider": {
    "@type": "LocalBusiness",
    "name": "Columbus Concrete & Design Co",
    "telephone": "(614) 902-3793",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Columbus",
      "addressRegion": "OH",
      "addressCountry": "US"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "Columbus",
    "containedIn": {
      "@type": "State",
      "name": "Ohio"
    }
  }
};
---

<BaseLayout 
  title={service.title}
  description={service.description}
  canonicalUrl={`https://columbusconcretecontractor.co/services/${service.slug}/`}
  schema={serviceSchema}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-primary to-primary-dark text-white py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="text-5xl mb-4">{service.icon}</div>
          <h1 class="text-4xl lg:text-5xl font-bold mb-6">{service.name} in Columbus, OH</h1>
          <p class="text-xl text-gray-200 mb-8">{service.heroText}</p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact/" class="bg-secondary hover:bg-secondary-dark text-white px-8 py-4 rounded-lg font-bold text-lg transition text-center">
              Get Free Estimate
            </a>
            <a href={`tel:${phoneClean}`} class="bg-white/10 hover:bg-white/20 border-2 border-white text-white px-8 py-4 rounded-lg font-bold text-lg transition text-center">
              Call {phone}
            </a>
          </div>
        </div>
        <div class="lg:pl-8">
          <ContactForm source={`columbus-${service.slug}`} title={`Get a Free ${service.shortName} Estimate`} />
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Why Choose Our {service.shortName} Services?</h2>
          <ul class="space-y-4">
            {service.benefits.map((benefit) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-accent flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="bg-gray-50 rounded-xl p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-4">About Our {service.shortName} Services</h3>
          <div class="prose text-gray-600">
            {service.content.split('\n\n').map((paragraph) => (
              <p class="mb-4">{paragraph}</p>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Services -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Other Services We Offer</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {otherServices.map((s) => (
          <a href={`/services/${s.slug}/`} class="bg-white rounded-xl p-6 hover:shadow-lg transition group">
            <div class="text-3xl mb-3">{s.icon}</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-secondary transition">{s.name}</h3>
            <p class="text-gray-600 text-sm">{s.description.slice(0, 100)}...</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-primary text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to Get Started?</h2>
      <p class="text-xl text-gray-200 mb-8">
        Contact us today for a free estimate on your {service.shortName.toLowerCase()} project.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="/contact/" class="bg-secondary hover:bg-secondary-dark text-white px-8 py-4 rounded-lg font-bold text-lg transition">
          Get Free Estimate
        </a>
        <a href={`tel:${phoneClean}`} class="bg-white/10 hover:bg-white/20 border-2 border-white text-white px-8 py-4 rounded-lg font-bold text-lg transition">
          Call {phone}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
